{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "src", // Where your .ts files go
    "outDir": "dist", // Where compiled .js files will be placed
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}